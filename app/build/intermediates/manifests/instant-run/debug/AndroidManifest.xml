<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="science.denghaoyu.fascinatingmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <application
        android:name="science.denghaoyu.fascinatingmanager.FMApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="science.denghaoyu.fascinatingmanager.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="science.denghaoyu.fascinatingmanager.ConnectionsActivity"
            android:label="@string/title_activity_connections"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="science.denghaoyu.fascinatingmanager.AboutMeActivity"
            android:label="@string/title_activity_about_me"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="science.denghaoyu.fascinatingmanager.ContactMeActivity"
            android:label="@string/title_activity_contact_me"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="science.denghaoyu.fascinatingmanager.ManageDatabaseActivity" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="science.denghaoyu.fascinatingmanager.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>